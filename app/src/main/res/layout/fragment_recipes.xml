<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- SearchView -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar recetas..."
        android:iconifiedByDefault="false"
        android:background="@color/surface"
        android:elevation="2dp" />

    <!-- Filtros por CategorÃ­a -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:padding="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_desayuno"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ… Desayuno" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_almuerzo"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸ Almuerzo" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cena"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ Cena" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Filtros por CondiciÃ³n -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_diabetes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ©º Diabetes" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_hipertension"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’“ HipertensiÃ³n" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_obesidad"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš–ï¸ Obesidad" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- BotÃ³n Limpiar Filtros -->
    <Button
        android:id="@+id/btn_clear_filters"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Limpiar Filtros" />

    <!-- RecyclerView de Recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_recipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Estado VacÃ­o -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No se encontraron recetas"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone" />

</LinearLayout>
